# Cypress Configuration
# Copy this file to .env and update values as needed

# Base URL for the application under test
CYPRESS_BASE_URL=http://localhost:3000

# Viewport settings
CYPRESS_VIEWPORT_WIDTH=1366
CYPRESS_VIEWPORT_HEIGHT=850

# Video and screenshot settings
CYPRESS_VIDEO=true
CYPRESS_SCREENSHOTS_FOLDER=cypress/screenshots
CYPRESS_VIDEOS_FOLDER=cypress/videos

# Retry settings
CYPRESS_RETRIES_RUN_MODE=2
CYPRESS_RETRIES_OPEN_MODE=0

# Default test credentials (optional - can be overridden)
CYPRESS_DEFAULT_USERNAME=your_default_username
CYPRESS_DEFAULT_PASSWORD=your_default_password
